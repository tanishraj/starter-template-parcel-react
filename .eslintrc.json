{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb", "airbnb/hooks", "plugin:prettier/recommended"],
  "plugins": ["import", "jsx-a11y", "prettier", "react", "react-hooks"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": [
    ".eslintrc.json",
    ".prettierrc",
    ".parcelrc",
    "node_module/**/*",
    "dist/**/*",
    ".parcel-cache/**/*",
    ".vscode/**/*"
  ]
}
